{
  "name": "@verida/web3",
  "version": "0.1.1",
  "description": "Verida Web3 client that supports native blockchain transactions or routing via the Verida meta transaction server",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "files": [
    "build/src"
  ],
  "license": "Apache-2.0",
  "keywords": [],
  "scripts": {
    "test": "mocha --reporter spec --compilers ts:ts-node/register 'src/**/*.test.ts'",
    "lint": "gts lint",
    "clean": "gts clean",
    "copy": "cd src/contract && find . -name \"*.json\" | xargs cp --parents -t ../../build/src/contract && cd ../../",
    "copy-files": "copyfiles -u 1 src/**/*.json build/src/",
    "compile": "rm -rf build && tsc && yarn copy-files",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^14.11.2",
    "chai": "^4.3.6",
    "copyfiles": "^2.4.1",
    "gts": "^3.1.0",
    "mocha": "^10.0.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "dotenv": "^16.0.0",
    "ethers": "^5.6.5"
  }
}
