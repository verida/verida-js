{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": ["./src"],
        "includePattern": "\\.(jsx|js|ts|tsx)$",
        "exclude": ["node_modules", "docs", "dist", "test"]
    },
    "plugins": [
        "../../node_modules/better-docs/component",
        "../../node_modules/better-docs/category",
        "plugins/markdown",
        "../../node_modules/better-docs/publish",
        "../../node_modules/better-docs/typescript"
    ],
    "opts": {
        "encoding": "utf8",
        "destination": "api-docs/",
        "recurse": true,
        "verbose": true,
        "readme": "./readme.md",
        "template": "../../node_modules/better-docs"
    },
    "templates": {
        "better-docs": {
              "name": "Verida Libraries Documentation",
              "navigation": [
                  {
                      "label": "GitHub",
                      "href": "https://github.com/verida/verida-js"
                  }
              ]
        },
        "search": true
    }
  }
  
