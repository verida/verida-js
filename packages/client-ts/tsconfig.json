{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "skipLibCheck": true, // disable TS checking of dependencies
      "outDir": "./dist",
      "sourceMap": true,
      "strict": true,
      "lib": [
        "es5",
        "es2015"
      ],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "test", "dist"]
}