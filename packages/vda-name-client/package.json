{
  "name": "@verida/vda-name-client",
  "version": "2.2.0",
  "description": "Client to manage adding and fetching names from the blockchain",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "files": [
    "build/src"
  ],
  "directories": {
    "src": "src",
    "test": "tests"
  },
  "license": "Apache-2.0",
  "keywords": [],
  "scripts": {
    "tests": "ts-mocha './test/**/*.test.ts'",
    "test": "ts-mocha --timeout 200000",
    "lint": "gts lint",
    "clean": "gts clean",
    "copy": "cd src/contract && find . -name \"*.json\" | xargs cp --parents -t ../../build/src/contract && cd ../../",
    "copy-files": "copyfiles -u 1 src/**/*.json build/src/",
    "compile": "rm -rf build && tsc && yarn copy-files",
    "build": "rm -rf build && tsc && yarn copy-files",
    "fix": "gts fix",
    "prepare": "npm run compile"
  },
  "dependencies": {
    "@ethersproject/providers": "^5.7.2",
    "@verida/helpers": "^2.2.0",
    "@verida/types": "^2.2.0",
    "@verida/web3": "^2.2.0",
    "axios": "^0.27.2",
    "ethers": "^5.7.0"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.3",
    "gts": "^3.1.0",
    "mocha": "^10.1.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
