{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "rootDir": ".",
      "outDir": "build",
      "sourceMap": true,
      "strict": true,
      "declaration": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": [
      "src/**/*.ts",
      "test/**/*.ts"
    ],
    "lib": [
      "es5",
      "es2015"
    ]
  }
  