{
  "name": "vda-did",
  "version": "0.1.1",
  "description": "Create, manage and use did:ethr identifiers",
  "source": "src/index.ts",
  "main": "lib/index.js",
  "module": "lib/index.module.js",
  "unpkg": "lib/index.umd.js",
  "types": "lib/index.d.ts",
  "umd:main": "lib/index.umd.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:uport-project/ethr-did.git"
  },
  "files": [
    "lib",
    "src",
    "LICENSE"
  ],
  "author": "Pelle Braendgaard",
  "contributors": [
    "Mircea Nistor <mircea.nistor@mesh.xyz>"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "test": "jest",
    "test:ci": "jest --coverage && codecov",
    "build:js": "microbundle --compress=false",
    "build": "yarn lint && yarn build:js && yarn test",
    "format": "prettier --write \"src/**/*.[jt]s\"",
    "lint": "eslint --ignore-pattern \"src/**/*.test.[jt]s\" \"src/**/*.[jt]s\"",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test:ci && yarn format && yarn lint",
    "release": "semantic-release --debug"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!**/node_modules/**",
      "!**/__tests__/**"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/time_measure_polygon.test.[jt]s"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.16.7",
    "@babel/preset-env": "7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "@ethersproject/contracts": "5.5.0",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "@truffle/hdwallet-provider": "^2.0.10",
    "@types/jest": "27.4.0",
    "@typescript-eslint/eslint-plugin": "5.9.0",
    "@typescript-eslint/parser": "5.9.0",
    "codecov": "3.8.2",
    "eslint": "8.6.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "26.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "ethers": "^5.6.0",
    "ethr-did-registry": "0.0.3",
    "ganache-cli": "6.12.2",
    "jest": "27.4.7",
    "microbundle": "0.14.2",
    "prettier": "2.5.1",
    "semantic-release": "19.0.2",
    "typescript": "4.5.4"
  },
  "dependencies": {
    "@ethersproject/abstract-signer": "^5.5.0",
    "@ethersproject/base64": "^5.5.0",
    "@ethersproject/basex": "^5.5.0",
    "@ethersproject/bytes": "^5.5.0",
    "@ethersproject/providers": "^5.5.0",
    "@ethersproject/signing-key": "^5.5.0",
    "@ethersproject/strings": "^5.5.0",
    "@ethersproject/transactions": "^5.5.0",
    "@ethersproject/wallet": "^5.5.0",
    "did-jwt": "^5.12.3",
    "vda-did-resolver": "../vda-did-resolver/lib/"
  }
}
